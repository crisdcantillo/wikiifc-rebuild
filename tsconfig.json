{
    "compilerOptions":
    {
        "module": "ES2022",
        "moduleResolution": "bundler",
        "target": "ES2021",
        "lib": [ "ES2021", "DOM" ],
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "sourceMap": false,
        "removeComments": true,
        "noEmitOnError": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
    },
    "include": [
        "src/**/*",
        "types.d.ts"
    ],
    "exclude": ["node_modules", "dist"]
}
